    <script>
        mapboxgl.accessToken = 'pk.eyJ1Ijoic3dheWFtLTExIiwiYSI6ImNsZTc0NjlqYTAxeGczdm56dWIyMWdoYnoifQ.2IT1CxUH664iTPiG5zhTpg';
        var startinglongitude = 72.786068;
        var startinglatitude = 21.16431;
        var endinglongitude = 72.786068;
        var endinglatitude = 21.202942;

        // Assuming the JSON data is stored in a file named "data.json"


        var map = new mapboxgl.Map({
            container: 'map',
            style: 'mapbox://styles/mapbox/streets-v11',
            center: [startinglongitude, startinglatitude],
            zoom: 10
        });
        map.addControl(new mapboxgl.NavigationControl());

        var startingMarker = new mapboxgl.Marker({ color: '#00ff00' })
            .setLngLat([startinglongitude, startinglatitude])
            .addTo(map);

        var endingMarker = new mapboxgl.Marker({ color: '#ff0000' })
            .setLngLat([endinglongitude, endinglatitude])
            .addTo(map);

        var url = 'https://api.mapbox.com/directions/v5/mapbox/driving/' + startinglongitude + ',' + startinglatitude + ';' + endinglongitude + ',' + endinglatitude + '?steps=true&geometries=geojson&access_token=' + mapboxgl.accessToken;
        map.on('load', function () {
            // Make a GET request to the API
            fetch(url)
                .then(function (response) {
                    return response.json();
                })
                .then(function (data) {
                    // Add the route to the map
                    map.addSource('route', {
                        type: 'geojson',
                        data: {
                            type: 'Feature',
                            properties: {},
                            geometry: data.routes[0].geometry
                        }
                    });
                    map.addLayer({
                        id: 'route',
                        type: 'line',
                        source: 'route',
                        layout: {
                            'line-join': 'round',
                            'line-cap': 'round'
                        },
                        paint: {
                            'line-color': '#3887be',
                            'line-width': 5,
                            'line-opacity': 0.75
                        }
                    });
                });
        });
